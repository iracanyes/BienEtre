<div class="contact-form-wrapper clearfix">
    <h3>Connexion</h3>
    {% if error %}
        <div class="alert alert-icon alert-dismissible alert-warning" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <i class="fa fa-times" aria-hidden="true"></i>
            </button>
            <strong>Warning!</strong> {{ error.messageKey|trans(error.messageData, "security") }}
        </div>

    {% endif %}
    <form class="contact-form" action="{{ path('login') }}" method="post">
        <div class="form-group">
            <label for="username">
                Nom utilisateur :
            </label>
            <input type="text" id="username" name="_username" value="{{ last_username }}"  class="form-control" />
        </div>

        <div class="form-group">
            <label for="password">
                Mot de passe :
            </label>
            <input type="password" id="password" name="_password" class="form-control" />
        </div>
        {#
        Ajout d'un champ invisible contenant le token de protection CSRF
        #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token("authenticate") }}">


        {#
            Si l'on veut contrôler l'URL auquel l'utilisateur sera redirigé en cas d'authentification réussie
            <input type="hidden" name="_target_path" value="/account" />
         #}


        <button id="submit" name="login" class="btn btn-primary pull-left">Connexion</button>

    </form>
</div><!-- /.contact-form-wrapper -->